// STEADY STATE BLOWING
FoamFile
{
		version			2.0;
		format			ascii;
		class				volVectorField;
		location		"0";
		object			U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

alpha						0;						// AoA in Degrees
U 							20; 					// Flow magnitude
massflow_l			0.005;				 // mass flow rate
massflow_u			0;


dimensions			[0 1 -1 0 0 0 0];

// internalField		uniform  (#calc "$U * cos(degToRad($alpha))" #calc "$U*sin(degToRad($alpha))"  0);
internalField		uniform  (0 0 0);


boundaryField
{
		down
		{
				type						zeroGradient;
		}

		right
		{
				type						zeroGradient;
		}

		up
		{
				type						zeroGradient;
		}

		meanFlow
		{
				type						uniformFixedValue;
				uniformValue		constant (#calc "$U * cos(degToRad($alpha))" #calc "$U*sin(degToRad($alpha))"  0);
				value						uniform  (#calc "$U * cos(degToRad($alpha))" #calc "$U*sin(degToRad($alpha))"  0);
		}

		surface
		{
				type						noSlip;
		}

		coandaLower
		// COANDA STEADY:
		{
				type						flowRateInletVelocity;
				massFlowRate		$massflow_l;
				value						uniform ($massflow_l 0 0);
		}

		coandaUpper
		{
				type						flowRateInletVelocity;
				massFlowRate		$massflow_u;
				value						uniform ($massflow_u 0 0);
		}


		defaultFaces
		{
				type						empty;
		}
}

// ************************************************************************* //
